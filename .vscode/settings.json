{
  "editor.formatOnSave": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "files.associations": {
    "*.json": "jsonc"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[nix]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  }
}
